<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> //設計圖片重疊
<item>
    <shape>
        <stroke
            android:width="1dp"
            android:color="#ff000000"/>
        <corners android:radius="5dp"/>
        <solid android:color="@color/white"/>
        <padding android:right="5dp"/>
        <size android:height="30dp"
              android:width="80dp"/>
    </shape>
</item>
    <item>
        <bitmap
            android:gravity="end"
            android:src="@drawable/down"
            android:antialias="true">     //反鋸齒
        </bitmap>
    </item>
</layer-list>